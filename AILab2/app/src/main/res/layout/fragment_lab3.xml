        android:text="Check" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroupMethods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:checkedButton="@+id/radioButtonKinside">

            <RadioButton
                android:id="@+id/radioButtonKinside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K-inside" />

            <RadioButton
                android:id="@+id/radioButtonIso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="ISO data" />


            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max/Min" />

        </RadioGroup>

        <Spinner
            android:id="@+id/spinnerClusters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:entries="@array/clusters" />
    </LinearLayout>

</LinearLayout>
